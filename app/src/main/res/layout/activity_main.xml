<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hnk_1031.drum.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="6"
        android:rowCount="2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_gravity="fill"
            android:layout_column="1"
            android:layout_row="0"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:onClick="cymbal1"
            android:src="@drawable/cymbal1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_gravity="fill"
            android:layout_column="2"
            android:layout_row="0"
            android:src="@drawable/tom1"
            android:onClick="tom1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_gravity="fill"
            android:layout_column="3"
            android:layout_row="0"
            android:src="@drawable/tom2"
            android:onClick="tom2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_gravity="fill"
            android:layout_column="4"
            android:layout_row="0"
            android:src="@drawable/cymbal2"
            android:onClick="cymbal2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_gravity="fill"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@drawable/hihat"
            android:onClick="hihat" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton6"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_gravity="fill"
            android:layout_column="1"
            android:layout_row="1"
            android:src="@drawable/snare"
            android:onClick="snare" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton7"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_gravity="fill"
            android:layout_columnSpan="2"
            android:layout_column="2"
            android:layout_row="1"
            android:src="@drawable/bass"
            android:onClick="bass" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton8"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_gravity="fill"
            android:layout_column="4"
            android:layout_row="1"
            android:src="@drawable/tom3"
            android:onClick="tom3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton9"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_gravity="fill"
            android:layout_column="5"
            android:layout_row="1"
            android:src="@drawable/cymbal3"
            android:onClick="cymbal3" />

    </GridLayout>
</RelativeLayout>
